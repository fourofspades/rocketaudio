<?xml version="1.0" encoding="UTF-8"?>
<icecast>
   <listen-socket>
      <port>8000</port>
      <bind-address>0.0.0.0</bind-address>
      <!-- Listen on all interfaces -->
   </listen-socket>
   <mount>
      <mount-name>/low</mount-name>
      <username>source</username>
      <password>hackmebadly</password>
   </mount>
   <mount>
      <mount-name>/high</mount-name>
      <username>source</username>
      <password>hackmebadly</password>
   </mount>
   <limits>
      <workers>auto</workers>
      <clients>20</clients>
      <!-- Max listeners in total -->
   </limits>
   <emulation>
      <icecast-status-page>1</icecast-status-page>
   </emulation>
   <paths>
      <logdir>/var/log/rsas</logdir>
      <!-- Log files are stored here -->
      <webroot>/usr/share/rsas/webroot/</webroot>
   </paths>
</icecast>